  | return exp                                       :: :: return {{ com  return $[[exp]]$ from current function }}
% this can be used to break out of for loops
  | exit exp						:: :: exit
    {{ com halt all current execution }}
  | ref id                                     :: :: ref
  | throw exp                                  :: :: throw
